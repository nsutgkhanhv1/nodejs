<div class="mt-4">
    <div class="row">
        {{#with course}}
        <div class="col-lg-3">
            <button type="button" class="btn btn-primary">Học ngay</button>
            <a href="/courses/{{this._id}}/edit" class="btn btn-primary">Sửa</a>
            <a href="#" class="btn btn-primary">Xóa</a>
        </div>
        <div class="col-lg-9">
            <h2>{{name}}</h2>
            <iframe width="100%" height="400" src="https://www.youtube.com/embed/{{videoId}}"
                title="YouTube video player" frameborder="0"
                allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                allowfullscreen></iframe>
            <h4>{{description}}</h4>
        </div>
        {{/with}}
    </div>
</div>